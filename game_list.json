{
  "games": [
  {
    "name": "Supertux 2",
    "files":
      {
        "saves": "$HOME/.supertux2/**/*.stsg",
        "config": "$HOME/.supertux2/config"
      }
  },
  {
    "name": "Zelda: Mistery of solarus DX",
    "files":
    {
      "saves": "$HOME/.solarus/zsdx/**/*.dat",
      "config": "$HOME/.solarus/zsdx/config.ini"
    }
  },
  {
    "name": "Warsow 2.1",
    "files":
    {
      "config": "$XDG_DATA_HOME/warsow-2.1/basewsw/*.cfg",
      "screenshots": "$XDG_DATA_HOME/warsow-2.1/basewsw/screenshots/*.jpg"
    }
  },
  {
    "name": "Manaplus",
    "files":
    {
      "config": "$XDG_CONFIG_HOME/mana/mana/**/*.xml"
    }
  },
  {
    "name": "0AD 0.0.21",
    "files":
    {
      "config": ["$XDG_CONFIG_HOME/0ad/config/*.cfg","$XDG_CONFIG_HOME/0ad/config/*.json"],
      "saves": "$XDG_DATA_HOME/0ad/saves/*.0adsave",
      "screenshots": "$XDG_DATA_HOME/0ad/screenshots/*.png",
      "replays": ["$XDG_DATA_HOME/0ad/replays/**/*.txt","$XDG_DATA_HOME/0ad/replays/**/*.json"]
    }
  },
  {
    "name": "OpenRA",
    "files":
    {
      "config": "$HOME/.openra/settings.yaml",
      "replays": "$HOME/.openra/**/*.orarep"
    }
  }]
}
